<div id="customer_configuration">
<%= form_for(@customer_configuration) do |f| %>
    <% if @customer_configuration.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer_configuration.errors.count, "error") %> prohibited this customer_configuration
            from being saved:</h2>

          <ul>
            <% @customer_configuration.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :customer_id %>
      <br>
      <%= f.collection_select :customer_id, Customer.all, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :dailySlaStart %>
      <br>
      <%= f.time_select :dailySlaStart %>
    </div>
    <div class="field">
      <%= f.label :dailySlaEnd %>
      <br>
      <%= f.time_select :dailySlaEnd %>
    </div>
    <div class="field">
      <%= f.label :weeklySlaDays %>
      <br>

      <div id="checkbox_container">
        <input type="checkbox" class="css-checkbox" value="0" id="mon" name="check"/>
        <label for="mon" class="css-label">Monday</label>
        <input type="checkbox" class="css-checkbox" value="1" id="tue" name="check"/>
        <label for="tue" class="css-label">Tuesday</label>
        <input type="checkbox" class="css-checkbox" value="2" id="wed" name="check"/>
        <label for="wed" class="css-label">Wednesday</label>
        <input type="checkbox" class="css-checkbox" value="3" id="thu" name="check"/>
        <label for="thu" class="css-label">Thursday</label>
        <input type="checkbox" class="css-checkbox" value="4" id="fri" name="check"/>
        <label for="fri" class="css-label">Friday</label>
        <input type="checkbox" class="css-checkbox" value="5" id="sat" name="check"/>
        <label for="sat" class="css-label">Saturday</label>
        <input type="checkbox" class="css-checkbox" value="6" id="sun" name="check"/>
        <label for="sun" class="css-label">Sunday</label>
      </div>
      <%= f.text_field :weeklySlaDays ,{:id => 'weekly_input', :type => 'hidden'}%>
    </div>
    <div class="field">
      <%= f.label :excludedDays %>
      <br>

      <div id="datepicker"></div>
      <br/>
      <%= f.text_field :excludedDays, {:id => 'altField', :type => 'hidden'} %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
</div>